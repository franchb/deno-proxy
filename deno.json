{
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "permissions": {
    "default": {
      "net": true,
      "env": true,
      "run": false
    },
    "proxy-server": {
      "net": true,
      "env": [
        "ALLOWED_HOSTS",
        "PROXY_PORT",
        "PROXY_TIMEOUT_MS",
        "RATE_LIMIT_MAX_REQUESTS",
        "RATE_LIMIT_WINDOW_MS"
      ],
      "run": false
    },
    "testing": {
      "net": true,
      "env": true,
      "run": ["deno"]
    }
  },
  "tasks": {
    "dev": "deno run --watch -P=proxy-server main.ts",
    "start": "deno run -P=proxy-server main.ts",
    "test": "deno test -P=testing test_openai_responses.ts",
    "test-simple": "deno test -P=testing test_openai_responses_simple.ts",
    "check": "deno check main.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "test": {
    "permissions": {
      "net": true,
      "env": true,
      "run": ["deno"]
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["no-unversioned-import", "no-import-prefix"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1.0.15",
    "@std/http": "jsr:@std/http@1.0.21"
  },
  "exclude": ["node_modules/", "dist/", "coverage/"]
}
